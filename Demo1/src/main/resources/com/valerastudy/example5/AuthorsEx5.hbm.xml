<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!--Asocierea clasei mapate-->
    <joined-subclass name="com.valerastudy.example5.AuthorsEx5"
                     extends="com.valerastudy.example5.BookEx5"
                     entity-name="com.valerastudy.example5.AuthorsEx5"
                     table="AUTHORS">
        <key column="BOOK_ID"/>
        <!--Coloana pentru field bookId-->
        <property name="authorsId"
                  type="java.lang.Integer">
            <column name="AUTHORS_ID"/>
        </property>
        <!--Coloana pentru field bookName-->
        <property
                name="authorsName"
                type="string">
            <column name="AUTHORS_NAME"
                    length="100"
                    not-null="false"
                    unique="false"/>
        </property>
    </joined-subclass>
</hibernate-mapping>