<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!--Asocierea clasei mapate-->
    <class name="com.valerastudy.example8.BookEx8"
           table="BOOK">

        <!--Coloana pentru field bookId-->
        <id name="bookId"
            type="java.lang.Integer">
            <column name="BOOK_ID"/>
            <!--<generator class="identity"/>-->
        </id>

        <!--Coloana pentru field bookName-->
        <property
                name="bookName"
                type="string">
            <column name="BOOK_NAME"
                    length="100"
                    not-null="false"
                    unique="false"/>
        </property>
        <property
                name="bookAuthorName"
                type="string">
            <column name="AUTHOR_NAME"
                    length="100"
                    not-null="false"
                    unique="false"/>
        </property>
        <property
                name="bookPagesNumber"
                type="int">
            <column name="PAGES_NUMBER"
                    not-null="false"
                    unique="false"/>
        </property>
    </class>
</hibernate-mapping>