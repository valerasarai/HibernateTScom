<?xml version="1.0"?>
<!-- - - - - - - - - - - - - - - - - - - - - - -
Model de hibernate mapping pentru exemplu 2
Varianta clasei fara field-ul ID, car cu un cimp ID in DB
 - - - - - - - - - - - - - - - - - - - - - - -->
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!--Asocierea clasei mapate-->
    <class name="com.valerastudy.example2.BookEx2" table="BOOK_EX2" catalog="valerastudy">
        <!--Coloana ID fara field bookId-->
        <id type="int"
            column="id">
            <generator class="native"/>
        </id>
        <!--Coloana pentru field bookName-->
        <property name="bookName"
                  type="string">
            <column name="BOOK_NAME"
                    length="100"
                    not-null="false"
                    unique="false" />
        </property>
        <!--Coloana pentru field bookCategory-->
        <property name="bookCategory"
                  type="string">
            <column name="BOOK_CATEGORY"
                    length="100"
                    not-null="false"
                    unique="false" />
        </property>
    </class>
</hibernate-mapping>