<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>
        <property name="connection.username">root</property>
        <!--on work computer-->
        <!--<property name="connection.password">root</property>-->
        <!--on home computer-->
        <property name="connection.password">root123</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!--Comented for exclude exception: could not initialize proxy-->
        <!--and save related objects to other object-->
        <property name="current_session_context_class">thread</property>

        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <property name="show_sql">true</property>

        <!-- update -->
        <property name="hbm2ddl.auto">create</property>
        <mapping resource="com/valerastudy/example6/BookEx6.hbm.xml"/>
        <mapping resource="com/valerastudy/example7/AuthorsEx7.hbm.xml"/>

    </session-factory>
</hibernate-configuration>